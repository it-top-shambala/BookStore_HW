<Window x:Class="BookStoreWPF.App.EnterBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStoreWPF.App"
        mc:Ignorable="d"
        Title="EnterBookWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Enter name book"></Label>
        <TextBox x:Name="enterNameBook" AcceptsReturn="True" Height="20" VerticalScrollBarVisibility="Auto"
         HorizontalScrollBarVisibility="Auto">Name Book</TextBox>
    </Grid>
</Window>
